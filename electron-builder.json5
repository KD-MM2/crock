// @see - https://www.electron.build/configuration/configuration
{
  $schema: 'https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json',
  appId: 'com.kdmm2.crock',
  asar: true,
  productName: 'Crock',
  buildVersion: '0.1.1',
  artifactName: 'Crock-${platform}-${version}.${ext}',
  copyright: 'Â© 2025 KD-MM2 (Cao Thai Duong)',
  directories: {
    output: 'release/${version}'
  },
  files: ['dist', 'dist-electron'],
  publish: [
    {
      provider: 'github',
      owner: 'KD-MM2',
      repo: 'crock',
      releaseType: 'draft'
    }
  ],
  mac: {
    target: [
      {
        target: 'dmg',
        arch: ['arm64', 'x64']
      }
    ],
    artifactName: '${productName}-${version}-Mac-${arch}.${ext}',
    icon: 'public/crock.icns',
    category: 'public.app-category.utilities'
  },
  win: {
    target: [
      {
        target: 'nsis',
        arch: ['x64']
      },
      {
        target: 'portable',
        arch: ['x64']
      }
    ],
    artifactName: '${productName}-${version}-Windows-${arch}-Setup.${ext}',
    icon: 'public/crock.ico',
    legalTrademarks: 'KD-MM2'
  },
  protocols: [
    {
      name: 'Crock Protocol',
      schemes: ['croc']
    }
  ],
  nsis: {
    oneClick: false,
    perMachine: false,
    allowToChangeInstallationDirectory: true,
    deleteAppDataOnUninstall: false,
    allowElevation: true
  },
  portable: {
    // Optional: customize portable executable
    artifactName: '${productName}-${version}-Windows-${arch}-Portable.${ext}'
  },
  linux: {
    target: ['AppImage'],
    artifactName: '${productName}-${version}-Linux-${arch}.${ext}',
    icon: 'public/crock.png',
    maintainer: 'KD-MM2 (Cao Thai Duong) <kaotd.z3@gmail.com>',
    category: 'Utility'
  }
}
